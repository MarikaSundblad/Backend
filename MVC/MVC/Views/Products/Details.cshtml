@model MVC.Entities.Product

@{
    ViewData["Title"] = "Details";
}

    <h1>Details</h1>
<div class="container">
    <h5 class="card-title">@Html.DisplayFor(model => model.ProductName)</h5>
    <div class="row">
        <div class="col-4">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" class="rounded float-start" alt="">
        </div>
        <div class="col">
            <p>@Html.DisplayFor(model => model.Description)</p>
            <p class="text-danger price pt-2">@Html.DisplayFor(model => model.Price):-</p>

            <div class="card-footer">
                <small>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </small>
            </div>
        </div>

    </div>
</div>
